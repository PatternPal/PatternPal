<UserControl x:Class="IDesign.Extension.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IDesign.Extension.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock FontSize="32" FontWeight="Bold" TextDecorations="Underline">Home</TextBlock>
        <Button Command="{Binding NavigateStepByStepListCommand}">
            <TextBlock Text="Navigate to Step by Step List" VerticalAlignment="Center" FontSize="48" />
        </Button>
        <Button Command="{Binding NavigateDetectorCommand}">
            <TextBlock Text="Navigate to Detector" VerticalAlignment="Center" FontSize="48" />
        </Button>
    </StackPanel>
</UserControl>
