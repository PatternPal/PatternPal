<UserControl x:Class="IDesign.Extension.ExtensionWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="IDesignExtension">
    <UserControl.Resources>
        <ResourceDictionary>
            <BitmapImage x:Key="settingImg" UriSource="Resources/settings.png"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel>

        <DockPanel DockPanel.Dock="Top" Margin="5">
            <Button DockPanel.Dock="Right" Margin="5,0,0,0" Height="20" BorderThickness="0" Background="Transparent" Click="Settings_Button">
                <Image Source="{StaticResource settingImg}" />
            </Button>
            <Button DockPanel.Dock="Left" Content="Analyse" Height="20" Click="Analyse_Button" />
        </DockPanel>

        <ProgressBar DockPanel.Dock="Bottom" Height="20" VerticalAlignment="Bottom" Minimum="0" Maximum="100" Name="statusBar" />
        <DockPanel>
            <TextBlock DockPanel.Dock="Top" TextWrapping="Wrap" Text="Output" VerticalAlignment="Top" FontSize="15" Margin="5,0,0,0" />
            <ListView Margin="5" Name="listView">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Pattern Name" DisplayMemberBinding="{Binding Name}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>
    </DockPanel>
</UserControl>
