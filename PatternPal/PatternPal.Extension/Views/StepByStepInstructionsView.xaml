<UserControl x:Class="PatternPal.Extension.Views.StepByStepInstructionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             xmlns:usercontrol="clr-namespace:PatternPal.Extension.UserControls"
             xmlns:viewModels="clr-namespace:PatternPal.Extension.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="360"
             d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type=viewModels:StepByStepInstructionsViewModel}">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground"
                        Value="{DynamicResource {x:Static vsshell:VsBrushes.BrandedUITextKey}}" />
            </Style>
            <Style TargetType="Button">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0"
                                             EndPoint="1,1">
                            <GradientStop Color="#4573EF"
                                          Offset="0" />
                            <GradientStop Color="#4496F3"
                                          Offset="0.53" />
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="Foreground"
                        Value="#ffffff" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowTabMouseOverBackgroundBeginKey}}"
                                    BorderThickness="1">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver"
                             Value="True">
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush StartPoint="0,0"
                                                     EndPoint="1,1">
                                    <GradientStop Color="#4496F3"
                                                  Offset="0" />
                                    <GradientStop Color="#4573EF"
                                                  Offset="0.53" />
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush StartPoint="0,0"
                                                     EndPoint="1,1">
                                    <GradientStop Color="#686868"
                                                  Offset="0" />
                                    <GradientStop Color="#707070"
                                                  Offset="0.53" />
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   TextWrapping="Wrap"
                   TextAlignment="Left"

                   Text="{Binding CurrentInstruction.Title}"
                   FontSize="15"
                   HorizontalAlignment="Center"
                   Margin="20,0,20,10"
                   MaxWidth="380" />
        <TextBlock Grid.Row="1"
                   TextWrapping="Wrap"
                   TextAlignment="Left"
                   Text="{Binding CurrentInstruction.Description}"
                   FontSize="15"
                   HorizontalAlignment="Center"
                   Margin="20,0,20,10"
                   MaxWidth="380" />
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,10">
            <Button Name="CheckImplementationButton"
                    Click="CheckImplementationButton_OnClick"
                    Height="40"
                    Width="60"
                    FontSize="15"
                    Margin="10,0,10,0"
                    HorizontalAlignment="Center">
                Check
            </Button>
            <Button Name="PreviousInstructionButton"
                    Click="PreviousInstructionButton_OnClick"
                    Height="40"
                    Width="30"
                    FontSize="15"
                    Margin="10,0,10,0"
                    HorizontalAlignment="Center">
                &lt;&lt;
            </Button>
            <Button Name="NextInstructionButton"
                    Click="NextInstructionButton_OnClick"
                    Height="40"
                    Width="30"
                    FontSize="15"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Center">
                &gt;&gt;
            </Button>
        </StackPanel>
        <TextBlock x:Name ="resultTextBlock"
                   Text ="Correct!"
                   Grid.Row="4"
                   TextWrapping="Wrap"
                   TextAlignment="Left"
                   FontSize="15"
                   Foreground="Green"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"
                   MaxWidth="380"
                   Visibility="Hidden">
        </TextBlock>
        <usercontrol:ExpanderResults x:Name="ExpanderResults" Grid.Row="5" Margin="20,0,20,0" />
    </Grid>
</UserControl>